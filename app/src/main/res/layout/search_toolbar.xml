<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:background="?attr/colorPrimary"
    android:layout_height="?attr/actionBarSize">
    
    <LinearLayout
        android:gravity="center"
        android:paddingStart="@dimen/content_padding"
        android:paddingEnd="@dimen/content_padding"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 输入框 -->
        <LinearLayout
            android:alpha="0.8"
            android:paddingEnd="@dimen/search_box_padding"
            android:paddingStart="@dimen/search_box_padding"
            android:background="@drawable/input_title"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/search"
                android:layout_width="25dp"
                android:layout_height="25dp"/>
            <EditText
                android:hint="@string/plantName"
                android:inputType="text"
                android:id="@+id/editView"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/d3"
                android:textSize="@dimen/text_medium"
                android:layout_width="0dp"
                android:background="@null"
                android:layout_height="25dp"/>
            <ImageView
                android:id="@+id/cancelImage"
                android:visibility="invisible"
                android:alpha="0.8"
                android:src="@drawable/quxiao"
                android:layout_width="25dp"
                android:layout_height="25dp"/>

        </LinearLayout>

        <TextView
            android:layout_marginStart="@dimen/baike_linearlayout_margin"
            android:id="@+id/cancel"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/cancel"
            android:textSize="15sp" />



    </LinearLayout>
    
</androidx.appcompat.widget.Toolbar>