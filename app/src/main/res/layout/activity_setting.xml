<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingConstraints"
    android:background="@color/plant_item_foreground"
    tools:context=".component.me.SettingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <com.example.greenplant.TitleLayout
            android:fitsSystemWindows="true"
            android:background="?attr/colorPrimary"
            android:id="@+id/titleLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/changeAvatarBox"
            android:background="@color/white"
            style="@style/meSettingBox">
            <TextView
                style="@style/MeSettingTextStyle"
                android:text="@string/avatar"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/avatar"
                android:layout_marginRight="@dimen/dialog_margin"
                app:shapeAppearanceOverlay="@style/RoundedCornerImageStyle"
                android:src="@drawable/yaya"
                android:layout_width="40dp"
                android:scaleType="centerCrop"
                app:layout_constraintRight_toLeftOf="@id/right_warding"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="40dp"/>

            <ImageView
                android:id="@+id/right_warding"
                android:layout_marginRight="@dimen/dialog_margin"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/right_warding"
                android:layout_width="27dp"
                android:layout_height="27dp"/>

            <View
                android:background="@color/light_gray"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@color/white"
            android:id="@+id/nameBox"
            style="@style/meSettingBox">
            <TextView
                android:text="@string/name"
                style="@style/MeSettingTextStyle"/>

            <TextView
                android:id="@+id/name"
                style="@style/MeSettingValueStyle"
                app:layout_constraintRight_toLeftOf="@id/secondRightWarding"
                android:text="meaning"/>

            <ImageView
                android:id="@+id/secondRightWarding"
                android:layout_marginRight="@dimen/dialog_margin"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/right_warding"
                android:layout_width="27dp"
                android:layout_height="27dp"/>

            <View
                android:background="@color/light_gray"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@color/white"
            android:id="@+id/introduceBox"
            style="@style/meSettingBox">
            <TextView
                android:text="@string/introduce"
                style="@style/MeSettingTextStyle"/>

            <TextView
                android:maxLines="1"
                android:ellipsize="end"
                android:id="@+id/introduce"
                android:layout_width="150dp"
                style="@style/MeSettingValueStyle"
                android:gravity="right"
                app:layout_constraintRight_toLeftOf="@id/thirdRightWarding"
                android:text="遇见晴天"/>

            <ImageView
                android:id="@+id/thirdRightWarding"
                android:layout_marginRight="@dimen/dialog_margin"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/right_warding"
                android:layout_width="27dp"
                android:layout_height="27dp"/>

            <View
                android:background="@color/light_gray"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="@dimen/d10"
            android:background="@color/white"
            android:id="@+id/changePhoneNumberBox"
            style="@style/meSettingBox">
            <TextView
                android:text="@string/changePhoneNumber"
                style="@style/MeSettingTextStyle"/>

            <TextView
                android:id="@+id/phoneNumber"
                style="@style/MeSettingValueStyle"
                app:layout_constraintRight_toLeftOf="@id/fourthRightWarding"
                android:text="15715815825"/>

            <ImageView
                android:id="@+id/fourthRightWarding"
                android:layout_marginRight="@dimen/dialog_margin"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/right_warding"
                android:layout_width="27dp"
                android:layout_height="27dp"/>

            <View
                android:background="@color/light_gray"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@color/white"
            android:id="@+id/changePasswordBox"
            style="@style/meSettingBox">
            <TextView
                android:text="@string/change_password"
                style="@style/MeSettingTextStyle"/>

            <ImageView
                android:layout_marginRight="@dimen/dialog_margin"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/right_warding"
                android:layout_width="27dp"
                android:layout_height="27dp"/>

            <View
                android:background="@color/light_gray"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@color/white"
            android:id="@+id/deletePhoneBox"
            style="@style/meSettingBox">
            <TextView
                android:text="@string/delete_phone"
                style="@style/MeSettingTextStyle"/>

            <ImageView
                android:layout_marginRight="@dimen/dialog_margin"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/right_warding"
                android:layout_width="27dp"
                android:layout_height="27dp"/>

            <View
                android:background="@color/light_gray"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/logout"
        android:text="@string/logout"
        android:textColor="@color/red"
        android:background="@drawable/button_stoken"
        android:layout_marginBottom="140dp"
        android:layout_marginLeft="@dimen/dialog_margin"
        android:layout_marginRight="@dimen/dialog_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>