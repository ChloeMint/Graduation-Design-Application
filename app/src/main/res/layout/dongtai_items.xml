<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/dialog_margin"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:padding="@dimen/content_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/infoBox"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/avatar"
                android:src="@drawable/yaya"
                app:shapeAppearanceOverlay="@style/RoundedCornerImageStyle"
                android:layout_width="58dp"
                android:scaleType="centerCrop"
                android:layout_height="58dp"/>
            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/username"
                    android:text="name"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/time"
                    android:text="一分钟前"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_marginTop="@dimen/dialog_margin"
            android:id="@+id/like"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/like_un" />
        <TextView
            android:layout_margin="3dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/like"
            android:id="@+id/likeNum"
            android:text="256"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textSize="15sp"
            android:layout_marginTop="@dimen/dialog_margin"
            android:layout_below="@+id/infoBox"
            android:id="@+id/content"
            android:textColor="@color/black"
            android:text="养花是一种心情，一种生活的态度"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="@dimen/dialog_margin"
            android:id="@+id/imageRecycleView"
            android:layout_below="@id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/commentRecycleView"
            android:layout_below="@+id/imageRecycleView"
            android:layout_marginTop="@dimen/dialog_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dialog_margin"
            android:layout_below="@+id/commentRecycleView"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <LinearLayout
                android:padding="5dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:background="@drawable/dongtai_item_edit_background"
                android:layout_height="match_parent">
                <EditText
                    android:id="@+id/edit"
                    android:layout_gravity="center"
                    android:textSize="15sp"
                    android:hint="@string/tryComment"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <Button
                android:enabled="false"
                android:id="@+id/sendButton"
                android:text="@string/send"
                android:layout_marginLeft="@dimen/d10"
                android:layout_marginTop="-5dp"
                android:layout_width="wrap_content"
                android:layout_height="50dp"/>
        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>