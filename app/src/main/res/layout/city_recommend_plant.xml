<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    android:layout_marginTop="@dimen/dialog_margin"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentPadding="@dimen/content_padding"
    app:strokeColor="@color/light_gray"
    app:strokeWidth="0.2dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/d10"
    app:cardElevation="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="@string/plantRecommend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/cityType"
            android:textColor="@color/gray_text"
            android:textSize="19sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="南方城市" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="环境特征：" />
            <TextView
                android:id="@+id/feature"
                android:layout_marginTop="5dp"
                android:text="南方特征南方特征南方特征南方特征南方特征南方特征南方特征南方特征南方特征南方特征南方特征南方特征南方特征南方特征南方特征"
                style="@style/weatherNoticeItemText"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="@dimen/d10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="适合植物：" />
            <TextView
                android:id="@+id/sut"
                android:layout_marginTop="5dp"
                android:text="南方特征南方特征南方特征南方特征南方特征南方特征南方特征南方特征南方特征南方特征南方特征南方特征南方特征南方特征南方特征"
                style="@style/weatherNoticeItemText"/>
        </LinearLayout>





    </LinearLayout>
</com.google.android.material.card.MaterialCardView>