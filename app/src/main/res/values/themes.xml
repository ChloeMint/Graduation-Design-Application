<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GreenPlant" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
<!--        <item name="colorPrimary">#89A87F</item>-->
        <item name="colorPrimary">#9AC68D</item>
        <item name="colorOnSurface">#3C3838</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="colorLightWhite">@color/white</item>
    </style>
    
<!--    <style name="Theme.GreenPlant.ActionBar" parent="Theme.AppCompat.Light.DarkActionBar">-->
<!--        <item name="colorPrimary">@color/green</item>-->
<!--    </style>-->

    <style name="SuperButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/d55</item>
    </style>

    <style name="SuperButton.Primary">
        <item name="android:textColor">@color/white</item>
    </style>



    <style name="plantItemTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="RoundedCornerImageStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">5dp</item>
    </style>


    <style name="RoundedImageStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">28dp</item>
    </style>
    
    <style name="weatherText">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="weatherNoticeItemText">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/plant_english_name_text_color</item>
    </style>
</resources>